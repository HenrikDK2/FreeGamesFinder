{
  "name": "free-games-finder",
  "version": "1.0.0",
  "description": "Introducing the ultimate solution for keeping track of limited-time free games. Free Games Finder tracks and alerts you, so you never miss out on great games.",
  "main": "index.js",
  "homepage": "https://github.com/HenrikDK2/FreeGamesFinder",
  "scripts": {
    "zip": "(cd dist && zip -r build.zip *)",
    "build": "rm -rf dist && webpack --mode=production --node-env=production && npm run zip",
    "build:dev": "rm -rf dist && webpack --mode=development",
    "start:firefox": "web-ext run --devtools --browser-console --source-dir ./dist/",
    "start": "npm run build:dev && concurrently \"webpack --watch\" \"npm run start:firefox\""
  },
  "keywords": [
    "FreeGamesFinder",
    "Games Finder",
    "Free Games",
    "Games",
    "Free",
    "Free Games Finder"
  ],
  "author": "Henrik Mundt Milo",
  "license": "AGPL-3.0-or-later",
  "devDependencies": {
    "@svgr/webpack": "^8.1.0",
    "@types/dompurify": "^3.0.5",
    "@types/uuid": "^9.0.8",
    "@types/webextension-polyfill": "^0.10.7",
    "@webpack-cli/generators": "^3.0.7",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^7.1.1",
    "html-webpack-plugin": "^5.6.0",
    "postcss": "^8.4.38",
    "postcss-loader": "^8.1.1",
    "prettier": "^3.2.5",
    "sass": "^1.75.0",
    "sass-loader": "^14.2.1",
    "style-loader": "^4.0.0",
    "svg-url-loader": "^8.0.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "web-ext": "^7.11.0",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
  },
  "dependencies": {
    "axios": "^1.6.8",
    "clsx": "^2.1.1",
    "dompurify": "^3.1.1",
    "goober": "^2.1.14",
    "preact": "^10.20.2",
    "preact-router": "^4.1.2",
    "react-icons": "^5.1.0",
    "uuid": "^9.0.1",
    "webextension-polyfill": "^0.11.0"
  }
}
